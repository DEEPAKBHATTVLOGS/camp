  <script>
    // Dynamic Greeting Message Based on Time of Day
    function updateGreeting() {
      const currentHour = new Date().getHours();
      const greetingElement = document.getElementById('dynamic-greeting');
      let greetingMessage = "";

      if (currentHour >= 5 && currentHour < 12) {
        greetingMessage = "ðŸŒž Good Morning, Welcome to Contractor Camp!";
      } else if (currentHour >= 12 && currentHour < 18) {
        greetingMessage = "â˜€ï¸ Good Afternoon, Welcome to Contractor Camp!";
      } else {
        greetingMessage = "ðŸŒ™ Good Evening, Welcome to Contractor Camp!";
      }

      greetingElement.innerText = greetingMessage;
    }

    // Call the greeting function on load
    updateGreeting();

    // Enter Site Function
    function enterSite() {
      window.location.href = "homepage.html"; // Replace with your main site URL
    }
